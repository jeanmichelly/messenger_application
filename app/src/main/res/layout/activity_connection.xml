<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LoginActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/login_eT" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp" android:text="test1@test.fr"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_eT" android:layout_below="@+id/login_eT" android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" android:text="test"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:id="@+id/sign_in_b" android:layout_below="@+id/password_eT" android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"/>
</RelativeLayout>
