<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="utt.isi.if26.project.android.messenger" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.ConnectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.DiscussionsActivity"
            android:label="@string/title_activity_discussions" >
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.StateActivity"
            android:label="@string/title_activity_state" >
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.NewGroupActivity"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name="utt.isi.if26.project.android.messenger.Activity.implementation.DiscussionActivity"
            android:label="@string/title_activity_discussion" >
        </activity>
    </application>

</manifest>
